Adding top-level Makefile to lay out files for
debian packaging
--- /dev/null
+++ b/Makefile
@@ -0,0 +1,52 @@
+PROTOS=server/wire/hello.proto \
+	server/wire/terrain.proto \
+	server/wire/entity.proto \
+	server/wire/model.proto \
+	server/wire/major.proto
+
+PROTO_OUT=server/src/.out
+PROTO_SOURCES=$(patsubst server/wire/%.proto,$(PROTO_OUT)/wire/%.pb.cc,$(PROTOS))
+PROTO_H_FILES=$(patsubst $(PROTO_OUT)/wire/%.cc,$(PROTO_OUT)/wire/%.h,$(PROTO_SOURCES))
+
+all:: $(PROTO_SOURCES) $(PROTO_H_FILES) hexcom/libhexcom.a client/native/hc
+
+
+$(PROTO_OUT)/wire/%.pb.cc $(PROTO_OUT)/wire/%.pb.h: server/wire/%.proto
+	@mkdir -p $(PROTO_OUT)
+	protoc -Iserver/ --cpp_out=$(PROTO_OUT) $<
+
+hexcom/libhexcom.a:
+	make -C hexcom
+
+client/native/hc:
+	make -C client/native
+
+DESTDIR=
+BIN=$(DESTDIR)/usr/bin
+VAR=$(DESTDIR)/var/games
+SHARE=$(DESTDIR)/usr/share/games
+
+TEXTURES=terrain.png toolsel.png toolbar.png
+SHADERS=simple water skybox robot
+
+INSTALLED_TEXTURES=$(patsubst %.png,$(SHARE)/hexplore/textures/%.png,$(TEXTURES))
+INSTALLED_FRAG_SHADERS=$(patsubst %,$(SHARE)/hexplore/shaders/%.frag.glsl,$(SHADERS))
+INSTALLED_VERTEX_SHADERS=$(patsubst %,$(SHARE)/hexplore/shaders/%.vertex.glsl,$(SHADERS))
+
+
+install:: $(BIN)/hexplore \
+	$(INSTALLED_TEXTURES) \
+	$(INSTALLED_FRAG_SHADERS) \
+	$(INSTALLED_VERTEX_SHADERS)
+
+$(BIN)/hexplore: client/native/hc
+	install --strip -m 0755 -D client/native/hc $(BIN)/hexplore
+
+$(SHARE)/hexplore/textures/%.png: client/native/textures/%.png
+	install -m 0644 -D $< $@
+
+$(SHARE)/hexplore/shaders/%.glsl: client/native/shaders/%.glsl
+	install -m 0644 -D $< $@
+
+client/native/textures/%.png: client/native/textures/%.xcf
+	xcf2png $< -o $@
